<!--Counters-->
<script>
    var Book = [];
    if (window.localStorage) {
        Book = JSON.parse(window.localStorage.getItem("Book") || []);
    }
    function RequestInfo(id, name, price, departure_location, arrival_location, departure_time) {
        var exist = false;
        for (var i = 0; i < Book.length; i++) {
            if (Book[i].ma == id) {
                alert("Bạn đã thêm tour này vào mục yêu thích");
                exist = true;
                break;
            }
        }
        if (!exist) {
            var tour = { ma: id, ten: name, gia: price, noi_di: departure_location, noi_den: arrival_location, ngay_di: departure_time};
            Book.push(tour);
            window.localStorage.setItem("Book", JSON.stringify(Book));
            alert("Thêm vào mục yêu thích thành công!");
        }
    }

</script>