                            <a href="@Url.Action("Details","Tour", new { id = 1 } )"><img src="~/Asset/images/cta-1-368x420.jpg" alt="" width="368" height="420" /></a>
                            <h5 class="box-categories-title">Balloon Flights</h5>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 wow fadeInDown col-9" data-wow-delay=".2s">
