
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="breadcrumbs-custom-inset">
    <div class="breadcrumbs-custom context-dark bg-overlay-60">
        <div class="container">
            <h2 class="breadcrumbs-custom-title">Choose your favorite tour</h2>
            <ul class="breadcrumbs-custom-path">
                <li><a href="index.html">Home</a></li>
                <li class="active">Tour</li>
            </ul>
            <div class="container mt-5">
                <div class="row">
                    <div class="col-md-3">
                        <h6 style="">Điểm đi</h6>
                        <select class="form-select form-control mb-3" aria-label="Select location 1" placeholder="">
                            <option selected>Chọn điểm đi</option>
                            <option value="location1">Location 1</option>
                            <option value="location2">Location 2</option>
                            <option value="location3">Location 3</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <h6 style="">Điểm đến</h6>
                        <select class="form-select form-control mb-3" aria-label="Select location 2" placeholder="Điểm đến">
                            <option selected>Điểm đến</option>
                            <option value="location1">Location 1</option>
                            <option value="location2">Location 2</option>
                            <option value="location3">Location 3</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <h6 style="">Ngày khởi hành</h6>
                        <input type="date" class="form-control mb-3" id="datepicker" placeholder="Ngày tháng đi">
                    </div>
                    <div class="col-md-2">
                        <h6 style="">Số ngày đi</h6>
                        <input type="number" class="form-control mb-3" placeholder="Số ngày đi">
                    </div>
                    <div class="col-md-1"  style="padding-top: 22px">
                        <button class="btn btn-primary btn-block">
                            <i class="icon fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="box-position" style="background-image: url(/Asset/images/wallhaven-7pl713_1920x500.png);"></div>
    </div>
</section>

